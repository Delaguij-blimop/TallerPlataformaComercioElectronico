@model TallerPlataformaComercioElectronico.Entities.Product

@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="Index">Administrador</a></li>
    <li class="breadcrumb-item active">Productos</li>
</ol>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i> Listado de Productos
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
                <button class="btn btn-success" type="button" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>

        <hr />
        <table id="tabla" class="table table-striped">
            <thead>
                <tr>
                    <th>Descripcion</th>
                    <th>Marca</th>
                    <th>Categoria</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="frmProduct" method="post">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title" id="exampleModalLabel">Producto</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Id" class="form-control" type="hidden" value="0" />

                    <div class="form-floating mb-1">
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <img id="productImage" height="198" width="200" class="border border-dark" />
                            </div>
                            <div class="mb-2">
                                <input class="form-control" type="file" id="imgproducto" onchange="readURL(this);">
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-1">
                        <input asp-for="Description" class="form-control" aria-required="true" />
                        <label asp-for="Description" class="form-label"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-1">
                        <select asp-for="BrandId" class="form-control" asp-items="Model.Brands"></select>
                        <label asp-for="BrandId" class="form-label"></label>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-1">
                        <select asp-for="CategoryId" class="form-control" asp-items="Model.Categories"></select>
                        <label asp-for="CategoryId" class="form-label"></label>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-1">
                        <input asp-for="Price" class="form-control" aria-required="true" />
                        <label asp-for="Price" class="form-label"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-1">
                        <input asp-for="Stock" class="form-control" aria-required="true" />
                        <label asp-for="Stock" class="form-label"></label>
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                    <button id="btnSubmit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/home/products.js"></script>
}

