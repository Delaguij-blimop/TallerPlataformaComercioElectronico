@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Store.cshtml";
}

<div class="row mt-5">
    <div class="bg-secondary py-3">
        <div class="container my-3">
            <div class="text-center text-white">
                <h2 class="fw-bolder">Tienda</h2>
            </div>
        </div>
    </div>

    <div class="py-2">
        <div class="container px-2 px-lg-2 mt-5">
            <div id="catalogo-productos" class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            </div>
        </div>
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="filterCategoryModal" tabindex="-1" aria-labelledby="filterCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filterCategoryModalLabel">Seleccione una Categoría</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row row-categoria">
                </div>

            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/store/index.js"></script>
}