@model TallerPlataformaComercioElectronico.Entities.Product
@{
    ViewBag.Title = "Producto";
    Layout = "~/Views/Shared/_Layout_Store.cshtml";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="data:image/@Html.DisplayTextFor(model => model.Extension);base64,@Html.DisplayTextFor(model => model.Base64)" alt="..."></div>
            <div class="col-md-6">
                <ol class="breadcrumb mb-4 mt-4">
                    <li class="breadcrumb-item">@Html.DisplayTextFor(model => model.Category.Description)</li>
                    <li class="breadcrumb-item active">@Html.DisplayTextFor(model => model.Brand.Description)</li>
                </ol>
                <h1 class="display-5 fw-bolder">@Html.DisplayTextFor(model => model.Description)</h1>
                <div class="fs-5 mb-5">
                    <span>$ @Html.DisplayTextFor(model => model.Price)</span>
                </div>
                <div class="d-flex">
                    <a href="@Url.Action("Index", "Store")" class="btn btn-danger w-50 text-center me-3">
                        <i class="fas fa-undo-alt"></i> Volver
                    </a>
                    <button class="btn btn-success btn-agregar-carrito flex-shrink-0 w-50 " type="button" data-productId="@Html.DisplayTextFor(model => model.Id)">
                        <i class="fas fa-cart-plus"></i> Agregar al carrito
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {

}